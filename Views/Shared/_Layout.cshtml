<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tenant_turner</title>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        @* if you're NOT on the homepage, display the below nav bar *@
        @if(ViewBag.Homepage == null)
        {
            <!-- NAV BAR -->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top nav-scrolled">
        <a class="navbar-brand" href="/">
            <img src="/images/logo-TenantTurner-wide-354x80.png" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto w-100">
                    <li class="nav-item active">
                    <a class="nav-link nav-text-color" href="/benefits">Benefits/Features <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                    <a class="nav-link nav-text-color" href="/pricing">Pricing <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                    <a class="nav-link nav-text-color" href="/rentals">Listings <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                    <a class="nav-link nav-text-color" href="/about">About <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            @{
                if(ViewBag.User == null)
                {
                    <a class="ml-auto" href="/account"><button class="btn btn-sm btn-secondary btn-transform"
            type="button">Login/Register</button></a>
                }
                else
                {
                    <a class="ml-auto" href="/logout"><button class="btn btn-sm btn-secondary btn-transform"
            type="button">Logout</button></a> 
                }
            }
            </div> <!-- /.navbar-collapse -->
        </nav>
        }
        @* else if you're ON the homepage, display the bottom special nav for the jquery features *@
        else
        {
            <!-- NAV BAR -->
            <nav class="nav-on-homepage navbar navbar-expand-lg navbar-light fixed-top">
            <a class="navbar-brand" href="/">
                <img id="logo-black" class="hidden" src="/images/logo-TenantTurner-wide-354x80.png" alt="">
                <img id="logo-white" src="/images/logo-tenant-turner-white-text.png" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto w-100">
                        <li class="nav-item active">
                    <a class="nav-link nav-text-color" href="/benefits">Benefits/Features <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                    <a class="nav-link nav-text-color" href="/pricing">Pricing <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                    <a class="nav-link nav-text-color" href="/rentals">Listings <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                    <a class="nav-link nav-text-color" href="/about">About <span class="sr-only">(current)</span></a>
                    </li>
                    </ul>
                @{
                    if(ViewBag.User == null)
                    {
                        <a class="ml-auto" href="/account"><button class="btn btn-sm btn-outline-light btn-transform"
                type="button">Login/Register</button></a>
                    }
                    else
                    {
                        <a class="ml-auto" href="/logout"><button class="btn btn-sm btn-outline-light btn-transform"
                type="button">Logout</button></a> 
                    }
                }
                </div> <!-- /.navbar-collapse -->
            </nav>
        }
        
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <div class="row">
                <div class="col-xs-12 table">
                    <ul id="footer-list">
                        <li><a href="/benefits">BENEFITS/FEATURES</a></li>
                        <li><a href="/pricing">PRICING</a></li>
                        <li><a href="/rentals">LISTINGS</a></li>
                        <li><a href="/about">ABOUT</a></li>
                    </ul>
                    <div class="phone">
                        <a href="tel:+1-888-976-4638">1-888-976-4638</a>
                    </div>
                </div>
            </div>
            <div class="copywrite">
                &copy; 2021 - Adam Gibson - A huge Tenant Turner Fan!
            </div>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> - 
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Customer Terms of Use</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
